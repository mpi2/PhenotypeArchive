 <dataConfig>
	<dataSource name="disease_core" type="HttpDataSource" baseUrl="http://solr-slave-sanger.sanger.ac.uk/solr451/phenodigm/" encoding="UTF-8" connectionTimeout="10000" readTimeout="10000"/>
     
        <document name="docs">
                <entity dataSource="disease_core" name="doc" stream="true" url="select?q=*&amp;wt=normal&amp;fq=type:disease&amp;fl=*&amp;rows=99999999"
                processor="XPathEntityProcessor" forEach="/response/result/doc/"		
                readTimeout="10000" connectionTimeout="10000"  > 

	 		<field column="id" xpath="/response/result/doc/str[@name='id']" />
			<field column="type" xpath="/response/result/doc/str[@name='type']" />
			<field column="disease_id" xpath="/response/result/doc/str[@name='disease_id']" />		
			<field column="disease_term" xpath="/response/result/doc/str[@name='disease_term']" />
			<field column="disease_alts" xpath="/response/result/doc/arr[@name='disease_alts']/str" />
			<field column="disease_classes" xpath="/response/result/doc/arr[@name='disease_classes']/str" />
			<field column="disease_source" xpath="/response/result/doc/str[@name='disease_source']" />
			<field column="disease_phenotypes" xpath="/response/result/doc/arr[@name='disease_phenotypes']/str" />
			<field column="mgi_predicted" xpath="/response/result/doc/int[@name='mgi_predicted']" />
			<field column="mgi_predicted_in_locus" xpath="/response/result/doc/int[@name='mgi_predicted_in_locus']" />
			<field column="impc_predicted" xpath="/response/result/doc/int[@name='impc_predicted']" />
			<field column="impc_predicted_in_locus" xpath="/response/result/doc/int[@name='impc_predicted_in_locus']" />
			<field column="human_curated" xpath="/response/result/doc/int[@name='human_curated']" />
			<field column="mouse_curated" xpath="/response/result/doc/int[@name='mouse_curated']" />
		</entity>
	</document>

</dataConfig>